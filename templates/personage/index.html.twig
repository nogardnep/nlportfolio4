{% extends 'base.html.twig' %}

{% block title %}Personage index{% endblock %}

{% block body %}
    <h1>Personage index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for personage in personages %}
            <tr>
                <td>{{ personage.id }}</td>
                <td>{{ personage.title }}</td>
                <td>
                    <a href="{{ path('personage_show', {'id': personage.id}) }}">show</a>
                    <a href="{{ path('personage_edit', {'id': personage.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('personage_new') }}">Create new</a>
{% endblock %}
